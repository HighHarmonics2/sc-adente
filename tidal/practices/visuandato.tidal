  $ superimpose (
    (hurry "h")
    .(sometimesBy 0.5 ((|* sp 6).("[e|q]" <~).(stutWith 6 "[q|e]" ((|+ note (segment 1 $ choose [2,4])).(|* g 0.88)))))
    .(# o 8)
    .(# pan (slow 3 $ sine))
  )
  $ superimpose (
    (hurry "q")
    .(sometimes (|+ note 3))
    .(# hp 64 0.3)
  )
  $ superimpose (
    (hurry 2)
    .(degradeBy 0.5)
    .(|* g 0.8)
    .(# bpf 4500 )
    .(# o 7)
    .(# rvb 0.4 0.6)
