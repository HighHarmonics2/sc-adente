xfadeIn 1 8
-- d1
  $ rarely (# n (ri 8))
  $ layer [
    (juxBy 0.8 (iter 5))
      .(whenmod 7 5 ((# freeze 1).(# n 0)))
      .(sometimes (brak))
      .(rarely (# accelerate (irand 4 - 2)))
      .(# smear (range 0.1 0.8 $ slow 10 $ (cosine+square)/2))
      .(rarely (stut 4 0.5 0.2))
      .(# rvb' 0.2 0.5)
    ,
    (|* speed "<0.1 0.4 0.2>")
      .(# binshift 0.25)
      .(# comb (slow 4 $ sine))
      .(# oct' 0.7 0.7 0.9)
      .(# shape (slow 4 $ cosine/3 + 0.1))
    ,
    (slow 4)
      .(|* speed 4)
      .(rarely (stut 3 0.5 0.1))
      .(# pan rand)
      .(# hpf 3000)
      .(# hpq 0.6)
      .(# binshift "[0.5 0 0.9]")
  ]
  $ n (run 8)
  # s "chair"
  # del' 0.23 0.13 0.12

d1 silence

-- d2
clutchIn 2 8
  $ slow 2
  $ every 6 ((linger 0.5).(swing 3))
  $ s "[chair:15/2 chair:10?] chair:12*2"
  # rvb' 0.3 0.3
  # nudge 0.65
  # oct' 0.3 0.3 0.8

d2 silence

hush
